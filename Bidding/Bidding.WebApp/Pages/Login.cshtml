@page
@model Bidding.WebApp.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="input-container">
    <div class="input-box">
        <h2>Login</h2>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }


        <form method="post">
            <div class="form-group">
                <label asp-for="LoginRequest.Username">Username</label>
                <input type="text" asp-for="LoginRequest.Username" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="LoginRequest.Password">Password</label>
                <input type="password" asp-for="LoginRequest.Password" class="form-control" required />
                <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
            </div>
            <button type="submit" class="input-button">Login</button>
        </form>
        <div class="mt-3">
            <p>Don't have an account? <a asp-page="/Register">Register here</a></p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
}